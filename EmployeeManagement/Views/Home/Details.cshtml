@*Add by Anjali Agrawal*@
@model EmployeeViewModel

<div class="text-center employee-card-container">

    @* Display Success or Error Message using ViewBag *@
    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success">
            @ViewBag.Message
        </div>
    }
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger">
            @ViewBag.ErrorMessage
        </div>
    }

    <div class="card employee-card">
        <img class="card-img-top" src="~/images/BankImage.svg" alt="Card image cap" asp-append-version="true" />
        <div class="card-body">
            <h5 class="card-title">Employee</h5>
            <p><strong>Name:</strong> @Model.Name</p>
            <p><strong>Department:</strong> @Model.Department</p>
            <p><strong>Email:</strong> @Model.Email</p>

            <div class="btn-group">
                <a asp-controller="Home" asp-action="Index" class="btn btn-back">Back</a>
                <a asp-controller="Home" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-edit">Edit</a>

                <!-- Delete Button with AJAX -->
                <button type="button" class="btn btn-delete" data-id="@Model.Id" id="deleteBtn">Delete</button>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script src="~/js/Home.js"></script>

    <script>
        // AJAX delete button click handler
        $(document).ready(function () {
            $('#deleteBtn').click(function () {
                const employeeId = $(this).data('id');
                if (confirm('Are you sure you want to delete this employee?')) {
                    $.ajax({
                        url: '/Home/Remove/' + employeeId,  // Delete request URL
                        type: 'POST',
                        success: function (response) {
                            if (response.success) {
                                alert('Employee deleted successfully!');
                                window.location.href = '/Home/Index';  // Redirect to employee list
                            } else {
                                alert('Error: ' + response.message);
                            }
                        },
                        error: function () {
                            alert('An error occurred while deleting the employee.');
                        }
                    });
                }
            });
        });
    </script>
}

<style>
    /* General styling */
    .employee-card-container {
        margin-top: 50px;
    }

    .employee-card {
        width: 18rem;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: #ffffff;
        overflow: hidden;
        transition: transform 0.3s ease;
    }

        .employee-card:hover {
            transform: scale(1.05);
        }

    .card-img-top {
        width: 100%;
        height: 180px;
        object-fit: cover;
    }

    .card-body {
        padding: 20px;
        text-align: left;
    }

    .card-title {
        font-size: 1.5rem;
        font-weight: bold;
        margin-bottom: 15px;
    }

    .card-body p {
        font-size: 1rem;
        margin: 5px 0;
    }

    .btn-group {
        display: flex;
        justify-content: space-around;
        margin-top: 20px;
    }

    .btn {
        padding: 10px 20px;
        font-size: 1rem;
        border-radius: 5px;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

    .btn-back {
        background-color: #007bff;
        color: white;
    }

    .btn-edit {
        background-color: #28a745;
        color: white;
    }

    .btn-delete {
        background-color: #dc3545;
        color: white;
    }

    /* Hover effects for buttons */
    .btn:hover {
        transform: translateY(-3px);
    }

    .btn-back:hover {
        background-color: #0056b3;
    }

    .btn-edit:hover {
        background-color: #218838;
    }

    .btn-delete:hover {
        background-color: #c82333;
    }
</style>
